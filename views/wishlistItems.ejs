
<div class = "wishlist-container" style="padding-top: 50px;">
  <div class="card mb-3 position">
    <div class="row">
      <h1 style="margin-left: auto; margin-right: auto;"> YOUR WISHLIST GAMES (<%= wishlistGames.length %>)</h1>
    </div>
  </div>
    <% for(let wishlistGame of wishlistGames) {%>
        <div class="card mb-3 position">
            <div class="row no-gutters">
              <div class="col-md-1" style="display: flex; justify-content: center;">
                <button class = "btn btn-secondary wishlist-trash" style="width: 40px; 
                margin: 0 auto;">
                  <i class="fa fa-trash"></i>
                </button>
              </div>
              <div class="col-md-4">
                <img src="/images/<%= wishlistGame.name %>.jpg" class="card-img" alt="...">
              </div>
              <div class="col-md-7 wishlist-card">
                <div class="card-body">
                  <h5 class="card-title"><%= wishlistGame.name %></h5>
                  <p class="card-text"><%= wishlistGame.description %></p>
                </div>
              </div>
            </div>
          </div>
    <%}%>

</div>