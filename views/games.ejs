<div class="card-deck" style="padding-left: 10px; padding-right: 10px;">
    <% for( let game of games) { %>
        <div class="card">
            <a href = "#"><img class="card-img-top" src="/images/<%= game.name %>.jpg" alt="Card image cap"></a>
            <div class="card-body">
              <a href = "#" style="text-decoration: none;"><h5 class="card-title text-dark"><%= game.name %></h5></a>
              <!-- <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
              <button class = "btn btn-primary" style="display: block; margin: 0 auto;">CHECK AVAILABILITY</button>
            </div>
          </div>
    <% } %>
</div>
